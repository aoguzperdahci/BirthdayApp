<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BirthdayApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BirthdayApp.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <partial name="_Navbar" />
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top">
        <div class="container">
            <div class="row">

                <div class="col-md-4 text-center">
                    <p class="fs-5 m-3">Follow</p>
                    <a href="https://github.com/aoguzperdahci" target="_blank" class="m-3"><i class="bi bi-github" style="font-size:32px; color:black;"></i></a>
                    <a href="https://www.linkedin.com/in/aoguzperdahci/" target="_blank" class="m-3"><i class="bi bi-linkedin" style="font-size:32px; color:black;"></i></a>
                </div>

                <div class="col-md-4 text-center">
                    <p class="fs-5 m-3">Contact</p>
                    <p class="fs-6">ahmetoguzperdahci@@gmail.com</p>
                </div>

                <div class="col-md-4 mt-5 text-center">
                    &copy; 2022 BirthdayApp
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>